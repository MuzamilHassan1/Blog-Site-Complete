<div class="container">
    <%if @article.errors.any?%>
        <h3>following errors stopped the article editing</h3>
        <ol>
            <%@article.errors.full_messages.each do |error|%>
                <li><%=error%></li>
            <%end%>
        </ol>
    <%end%>

    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with(model: @article,class:"shadow-lg p-3 mb-3 bg-info rounded", local: true) do |f|%>
                <div class="form-group row">
                    <%=f.label :title, class:"col-2 col-form-label text-light"%><br>
                    <div class="col-10">
                        <%=f.text_field :title, class: "form-control shadow rounded", placeholder: "title of article" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%=f.label :description, class: "col-2 col=form-label text-light"%><br>
                    <div class="col-10">
                        <%=f.text_area :description,rows: 10, class:"form-control shadow rounded", placeholder: "description of article" %>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <%=f.submit class:"btn btn-outline-light btn-lg"%>
                </div>
            <%end%>
        </div>
        <%= link_to '[ Cancel and Return to articles listing Page]', articles_path, class:"text-info"%>
    </div>
</div>
