<%if @article.errors.any?%>
    <h3>following errors stopped the article editing</h3>
    <ol>
        <%@article.errors.full_messages.each do |error|%>
            <li><%=error%></li>
        <%end%>
    </ol>
<%end%>
<%= form_with(model: @article, local: true) do |f|%>
    <p>
        <%=f.label :title%><br>
        <%=f.text_field :title %>
    </p>
    <p>
        <%=f.label :description%><br>
        <%=f.text_area :description %>
    </p>
    <p>
        <%=f.submit%>
    </p>
<%end%>
