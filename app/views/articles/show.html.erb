<h1 class="text-center mt-4"><%=@article.title%></h1>

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-10 mt-4">
            <div class="card text-center shadow-lg mb-5 bg-white rounded">
                <div class="card-header font-italic">
                    by @Muzamil-Hassan
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%=@article.title%></h5>
                    <p class="card-text"><%=@article.description%></p>
                    <%=link_to "Edit",edit_article_path(@article.id), class:"btn btn-outline-info"%>
                    <%=link_to "Delete",article_path(@article.id),method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-outline-danger"%>
                </div>
                <div class="card-footer text-muted">
                    <small>
                    Created <%=time_ago_in_words(@article.created_at)%> ago,
                    Updated <%=time_ago_in_words(@article.updated_at)%> ago
                    </small>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center">
    <%=link_to "[ Return to articles listing ]",articles_path, class:"text-success"%>
    </div>
</div>
