<h1 class="text-center">Alpha Bloggers</h1>

<div class="flickr_pagination mb-4">
  <%= will_paginate @users, :container => false %>
</div>


<div class="container">
    <%@users.each do |user|%>
    <div class="row justify-content-md-center">
        <div class="col-10 mt-4">
            <div class="card text-center shadow-lg mb-5 bg-white rounded">
                <div class="card-header font-italic">
                    <%=link_to user.username, user_path(user.id)%>
                </div>
                <div class="card-body">
                    <%=link_to gravatar_for(user, size:150), user_path(user.id)%>
                    <p class="card-text"><%=pluralize(user.articles.count, "article")%></p>
                    <%=link_to "View Profile",user_path(user.id), class:"btn btn-outline-success"%>
                    <%if logged_in? && user==current_user%>
                        <%=link_to "Edit Profile",edit_user_path(user.id), class:"btn btn-outline-info"%>
                    <%end%>
                </div>
                <div class="card-footer text-muted">
                    <small>
                    joined <%=time_ago_in_words(user.created_at)%> ago,
                    </small>
                </div>
            </div>
        </div>
    </div>
    <%end%>
</div>


<div class="flickr_pagination mb-4">
  <%= will_paginate @users, :container => false %>
</div>
